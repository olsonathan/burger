<div class="container">

  <div class="row">
        <div class="col-md-4" >    
        </div>
                   
        <div class="col-md-4" style= "background-color: #ffffff; border-bottom: 2px solid #dddddd; border-width: 10%">
                    <h1>Sandwhichs!!!</h1>  
        </div>

        <div class="col-md-4">    
        </div>
  </div>

  <div class="row">
      <div class="col-md-5" > 

                  <h2>Sandwhichs to be eaten</h2>

                <ul>
                  {{#each sandwhich}}
                    {{#unless devoured}}
                      {{> cats/cat-block sleep=true}}
                    {{/unless}}
                  {{/each}}
                </ul>

            </div>

        <div class="col-md-2" > 
          </div>

        <div class="col-md-5" > 


            <h2>Sandwhichs that you have ate</h2>

            <ul>
              {{#each sandwhich}}
                {{#if devoured}}
                  {{> cats/cat-block sleep=false}}
                {{/if}}
              {{/each}}
            </ul>

            </div>

            </div>

  <div class="row">
        <div class="col-md-4" >    
        </div>
                   
        <div class="col-md-4" >
            <h2>Add a Sandwhich</h2>
          <form class="create-form">

           <div class="form-group">
              <label for="ca">Sandwhich:</label>
               <input type="text" id="ca" name="name">
            </div>

            <button type="submit">Add a Sandwhich</button>

          </form>        
                    


        </div>

        <div class="col-md-4">    
        </div>
  </div>




</div>