  <div class="row">
      <div class="col-md-5" > 

                  <h2>Sandwhichs to be eaten</h2>

          
        
        <table class="table">

                <tbody id="table">
                  <div>
                  
                  {{#each sandwhich}}
                  <tr>
                    {{#each this}}
                      <td>
                        {{#unless devoured}}
                     
                        {{this}}
                   
                        {{/unless}}
                        
                        </td>
                     
                     
                     
                     {{/each}}
                   
                    
                  </tr>
                  {{/each}}
                  
                </tbody>

            </div>

          </table>
     </div>


        <div class="col-md-2" > 
         
          </div>

        <div class="col-md-5" > 


            <h2>Sandwhichs that you have ate</h2>

            
              {{#each sandwhich}}
                {{#if devoured}}
                  {{> sandwhich/sand-block devoured=false}}
                {{/if}}
              {{/each}}
           
            </div>

            </div>

